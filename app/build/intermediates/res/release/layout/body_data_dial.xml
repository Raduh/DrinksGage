<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
   	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/gradient_bkg">
    
	    <LinearLayout
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:id="@+id/m_gender"
	        android:layout_alignParentTop="true">
	        	        
            <RadioButton
		        android:id="@+id/male_radio"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="2dp"/>
		    <TextView 
		        android:id="@+id/male_tag"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textSize="20sp"
		        android:text="Male"/>
   	 </LinearLayout>
   	 
   	 <LinearLayout
   	     android:id="@+id/f_gender" 
   	     android:layout_below="@+id/m_gender"
   	     android:layout_marginTop="2dp"
   	     android:layout_height="wrap_content"
   	     android:layout_width="match_parent">
	   	    
		    <RadioButton 
		        android:id="@+id/female_radio"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginRight="2dp"/>
		    <TextView 
		        android:id="@+id/female_tag"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textSize="20sp"
		        android:text="Female"/>
	</LinearLayout>
	
  	<LinearLayout
   	     android:id="@+id/weight_lay" 
   	     android:layout_below="@+id/f_gender"
   	     android:layout_marginTop="4dp"
   	     android:layout_height="wrap_content"
   	     android:layout_width="match_parent">
	   	    
		 <SeekBar 
		     android:id="@+id/weight"
		     android:max="120"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:progress="1"
		     android:layout_weight="0.85"/>
		 <TextView 
		     android:id="@+id/weight_txt"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="15dp"
		     android:text=" ? kg"
		     android:textSize="20sp"
		     android:layout_gravity="center"
		     android:layout_weight="0.15"/>  
	</LinearLayout>
	
  	<Button 
  	    android:id="@+id/done_data"
  	    android:layout_below="@+id/weight_lay"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:text="Done"
  	    android:background="@drawable/button_sexy_dial"
  	    android:layout_marginTop="10dp"
  	    android:layout_centerHorizontal="true"/>
</RelativeLayout>
