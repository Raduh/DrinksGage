<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="4dp"
    android:background="@drawable/gradient_bkg">
    
    <LinearLayout
        android:id="@+id/timeStarted"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">
	    <TextView 
	        android:id="@+id/how_long_txt"
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"
	        android:text="How many hours ago did you start drinking?"
	        android:layout_gravity="center"
	        android:layout_weight="0.75"
	        android:textSize="20sp"/>
	    
	    <kankan.wheel.widget.WheelView 
	        android:id="@+id/wheel"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.25"
	        android:layout_width="0dip" />
	 </LinearLayout>   
    <Button 
        android:id="@+id/see_bac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeStarted"
        android:layout_centerHorizontal="true"
        android:text="Get result"
        android:background="@drawable/button_sexy_dial"
        android:layout_marginTop="5dp"/>
    

</RelativeLayout>
